@page "/SignUp"
@model EnergyTracker.Pages.LogIn.SignUpModel
@{
}

<form method="post">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Sign Up</h5>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input type="text" id="username" asp-for="User.UserName" class="form-control" />
                        <span asp-validation-for="User.UserName"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" id="password" asp-for="User.Password" class="form-control" />
                        <span asp-validation-for="User.Password"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                    <p>If you already have an account you can <a href="/LogIn">log in</a></p>
                </div>
            </div>
        </div>
</form>
